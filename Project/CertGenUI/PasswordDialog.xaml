<Window x:Class="CertGenUI.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password" Height="300" Width="300" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10" FocusManager.FocusedElement="{Binding ElementName=passwordBox}">
        <TextBlock Name="label" Text="Enter password:" Margin="2"/>
        <PasswordBox Name="passwordBox" Margin="2"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="buttonOK" Content="OK" IsDefault="True" Width="80" Margin="5" Click="buttonOK_Click" />
            <Button Name="buttonCancel" Content="Cancel" IsCancel="True" Width="80" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
